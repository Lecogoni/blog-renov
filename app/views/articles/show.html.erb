 <div>
    <% if @article.article_has_like? %>
    
      <button type="button" class="btn btn-lg btn-danger" data-bs-toggle="popover" title="Ils ont liké votre <%= @article.category.name %>" data-bs-content="<%= @article.who_likes_article %>">
      <%= @article.likes.count %> <%= (@article.likes.count) <= 1 ? 'Like' : 'Likes'%></button>
    <% else %>
    <i class="fas fa-heart"></i>
      <div class="btn btn-lg btn-danger"><%= @article.likes.count %> <%= (@article.likes.count) <= 1 ? 'Like' : 'Likes'%></div>
