<div class="container article-show">

  <!-- ARTICLE -->

  <div class="article-header">
    <h1><%= @article.upcase_title %></h1>
    <h3 class="text">création de <%= @article.user.full_name %></h3>
    <%= @article.images.count %>
  </div>

  <!-- IMAGES -->


  <div>
    <% if @article.images.count == 1 %>

    <%= image_tag(@article.images.first, class: "img-fluid") %>

    <% elsif @article.images.attached? && @article.images.count > 1 %>

      
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
              <% @article.images.size.times do |i| %>
                  <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= "active" if i.zero? %>"></li>
              <% end %>
          </ol>

          <div class="carousel-inner">
              <% @article.images.each_with_index do |photo, index| %>
                  <div class="carousel-item <%= "active" if index == 0 %>">
                      <img class="d-block w-50" src="<%= image_path(url_for(photo)) %>" alt="<%= index.ordinalize %> image">
                  </div>
              <% end %>
          </div>

          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
          </a>

          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
          </a>
      </div>


    <% end %>
  </div>

<!-- CATEGORY - LIKES -->
  <div>
    <span class="filter"><%= @article.category.name %></span>
  </div>





  <br><br><br>  <br><br><br>  <br><br><br>  <br><br><br>

    <!-- LIKES -->
  <div>
    <% if @article.article_has_like? %>
      <button type="button" class="btn btn-lg btn-danger" data-bs-toggle="popover" title="Ils ont liké votre <%= @article.category.name %>" data-bs-content="<%= @article.who_likes_article %>">
      <%= @article.likes.count %> <%= (@article.likes.count) <= 1 ? 'Like' : 'Likes'%></button>
    <% else %>
      <div class="btn btn-lg btn-danger"><%= @article.likes.count %> <%= (@article.likes.count) <= 1 ? 'Like' : 'Likes'%></div>
    <% end %>

  </div>

  <br>


  <div>
    <% if @article.article_has_like? %>
      <button type="button" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="right" title="<%= @article.who_likes_article %>">
        <%= @article.likes.count %> <%= (@article.likes.count) <= 1 ? 'Like' : 'Likes'%></button>
    <% else %>
      <div class="btn btn-secondary"><%= @article.likes.count %> <%= (@article.likes.count) <= 1 ? 'Like' : 'Likes'%></div>
    <% end %>
  </div>

  <hr>

  <div>
    <p><%= @article.description %></p>
    <p>
      <span class="badge bg-light text-dark"></span>
      
    </p>
  </div>

  <hr>


  <hr>


  <!-- COUCOU -->

  <% if user_signed_in? && current_user.id != @article.user.id %>
      <%= button_to article_likes_path(@article), class:"btn btn-outline-primary", method: :post do %>
        <i class="bi bi-hand-thumbs-up"> Like</i>
      <% end %>
  <% end %>

  <% if user_signed_in? && current_user.id == @article.user.id %>

      <%= button_to edit_article_path(@article), class:"btn btn-outline-primary", method: :get do %>
        <i class="bi bi-pen"> Modifier</i>
      <% end %>

      <br>

      <%= link_to 'Supprimer', @article, class:"btn btn-outline-danger", method: :delete, data: { confirm: 'Êtes vous certain de vouloir supprimer cet article ?' } %>

  <% end %>


  <!-- COMMENT -->

      <% if user_signed_in? %>
  <div class="card my-1">
    <div class="card-body">
      <p class="font-weight-bold">Commentaires</p>
          <%= form_with(model: [@article, @article.comments.build]) do |f| %>
              <%= f.hidden_field :user_id, value: current_user.id %>
            <div class="form-group">
              <%= f.label 'nouveau commentaires' %>
              <%= f.text_area :body, class: 'form-control' %>
            </div>
            <%= f.submit 'publier', class: 'btn btn-primary mt-1' %>
          <% end %>
    </div>

  <!-- COMMENT PARTIAL -->
    <%= render 'comments' %>

  </div>
      <% end %>


  <!-- OTHER USER ARTICLE -->

  <h2><%= (@article.user.articles.count) <= 3 ? 'autre création' : 'autres créations'%> de <%= @article.user.first_name %></h2>

  <div class="row">
    <% @other_articles.each do |article| %>

      <div class="col-4 mb-3">
          <%= link_to (article) do %>
            <div class="card">
              <% if article.images.attached? %>
                <div class="card-img-top" alt="...">
                  <%= image_tag article.images.first.variant(resize_to_limit: [100, 100]) %>
                </div>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= article.titleize_title%></h5>
              </div>
            </div>
          <% end %>
        </div>

    <% end %>
  </div>

  <!-- ADMIN SECTION -->


  
  <% if user_signed_in? && current_user_is_admin? && current_user.id != @article.user.id %>
  <hr>
    <p>admin section</p>


  <%= link_to 'Supprimer cette publication', admin_delete_article_article_url(@article), class:"btn btn-outline-danger", method: :delete, data: { confirm: "Êtes vous certain de vouloir supprimer cette publication. Un email sera envoyé au membre afin de l'avertir de cette suppression" } %> 

  <% end %>
  
</div>

