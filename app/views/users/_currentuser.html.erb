<div class="card-user-profil">

  <div class="d-flex flex-row">

    <div class="p-2">
      <%= image_tag avatar_for(@user), style: "width: 100px; display: block", class: "rounded-circle" %>
    </div>

    <div class="p-2">
      <div>
        <h3>Bonjour <%= @user.first_name.capitalize %></h3>
        <span>membre depuis le <%= l(@user.created_at, format: :date) %></span><br>
        <span><%= @user.user_pluralize_article %> et <%= @user.user_pluralize_post %></span>
      </div>
      <hr>
      <div>
         <div class="d-flex justify-content-around">
            <div>
              <%= button_to edit_user_path(@user), :title => 'modifier mon profil', class: "btn btn-primary", method: :get do %>
                <i class="far fa-edit"></i>
              <% end %>
            </div>

            <div>
              <%= button_to new_article_path, :title => 'nouvelle crÃ©ation', class: "btn btn-primary", method: :get do %>
                <i class="fas fa-couch"></i>
              <% end %>
            </div>

            <div>
              <%= button_to new_post_path, :title => 'nouvelle annonce', class: "btn btn-primary", method: :get do %>
                <i class="fas fa-bullhorn"></i>
              <% end %>
            </div>
          </div>
      </div>

    </div>
  </div>

</div>