<div class="container">

  

  <div>
    <% if user_signed_in? && current_user.id == @user.id %>
      <%= render "users/currentuser" %>
    <% else %>
      <%= render "users/user" %>
    <% end %>
  </div>

  

  <div class="row">
    <div class="col-8">
      <h3>Créations</h3>
      <div class="row">
        <% @articles.each do |article| %>
          <div class="col-6">
            <%= link_to (article) do %>
              <div class="card mb-1">
                <div class="card-body">
                  <h5 class="card-title"><%= article.title %></h5>
                  <% if user_signed_in? && current_user.id == @user.id %>
                    <p class="card-text">
                      <%= link_to 'Edit', edit_article_path(article) %>
                      <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </p>
                <% end %>
                  <p>
                    <span class="badge bg-light text-dark"><%= article.likes.count %> <%= (article.likes.count) < 2 ? 'Like' : 'Likes'%></span>
                    <span class="badge bg-light text-dark"><%= article.comments.count %> <%= (article.comments.count) < 2 ? 'commentaire' : 'commentaires'%></span>
                  </p>
                  <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div>
        <%= link_to 'Edit', edit_user_path(@user) %> |
        <%= link_to 'Back', users_path %>
      </div>
    </div>
    <div class="col-4">
      <h3>Annonces</h3>
      <div class="row">
        <% @posts.each do |post| %>
          <div class="card mb-1">
            <div class="card-body">
              <h4 class="card-title"><%= post.title %></h4>
              <p>
                <%= post.body %>
              </p>
              <div class="badge bg-warning text-wrap">
                publié le <%= post.created_at %>
              </div>
              <div class="badge bg-info text-wrap">
                <%= post.column.name %>
              </div>
              <p>
                <% if user_signed_in? && current_user.id == post.user.id %>
                  <%= link_to 'Show', post %>
                  <%= link_to 'Edit', edit_post_path(post) %>
                  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <hr>
  <br>


</div>
