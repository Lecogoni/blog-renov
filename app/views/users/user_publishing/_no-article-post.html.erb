
<!-- ANNONCE -->
<h3>Annonces</h3>
<div class="row">
  <% @posts.each do |post| %>
    <div class="col-4">
      <div class="card-article-user">
        <%= link_to (post) do %>
          <div class="card-body">
            <h5 class=""><%= post.title %></h5>
            <div class="d-flex flex-row">
              <span class="post-body-user">
                <%= post.body %>
              </span>
              <div class="p-2">
                <% if post.picture.attached? %>
                  <div class="">
                    <%= image_tag post.picture.variant(resize_to_limit: [70, 70]), class: "post-picture" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div> 
          <div class="card-text">
              <span class="social-badge">publi√© le <%=l post.created_at, :format => ("%d %B %Y") %></span>
              <span class="post-badge-full"><%= post.column.name %></span>
              <% if post.answers.count > 0 %>
                <span class="post-badge"><i class="dark-plum far fa-comment-alt"></i><%= post.answers.count %></span>
              <% end %>
          </div>
        <% end %>
      </div>  
    </div>
  <% end %>
</div>


